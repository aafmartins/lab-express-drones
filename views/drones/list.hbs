<h2>Available drones</h2>

<ul>
  {{#each allDrones}}
    <li class="list-group-item">
      {{!-- <a href="/drones/{{this._id}}">{{this.name}}</a> --}}
      <h3>{{this.name}}</h3>
      <p>Number of propellers: {{this.propellers}}</p>
      <p>Max Speed: {{this.maxSpeed}}</p>

      <form action="/drones/{{this._id}}/edit" method="GET">
        <button class="btn btn-danger">Edit</button>
      </form>

      <form action="/drones/{{this.id}}/delete" method="POST">
        <button type="submit" class="btn btn-warning">Delete</button>
      </form>
    </li>
  {{/each}}
</ul>